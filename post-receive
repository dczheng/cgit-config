REPO=cgit-config

TMP=~/.tmp/${REPO}
SERVER=git@git-vultr:${REPO}
GITHUB=git@github.com:dczheng/${REPO}

mkdir -p ${TMP}

git --work-tree=${TMP} clean -fd
git --work-tree=${TMP} checkout --force
git --work-tree=${TMP} push ${SERVER} master -f
git --work-tree=${TMP} push ${GITHUB} master -f

rm -rf ${TMP}
